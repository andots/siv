{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:4321",
    "distDir": "../dist"
  },
  "package": {
    "productName": "siv"
  },
  "tauri": {
    "windows": [
      {
        "title": "siv",
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 1000,
        "minWidth": 300,
        "minHeight": 300,
        "decorations": false
      }
    ],
    "cli": {
      "description": "Load file",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "allowlist": {
      "all": false,
      "app": {
        "all": true,
        "hide": false,
        "show": false
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "exists": true,
        "scope": ["**"],
        "readDir": true,
        "copyFile": false,
        "createDir": false,
        "readFile": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "writeFile": false
      },
      "window": {
        "all": false,
        "center": false,
        "close": true,
        "create": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "show": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true,
        "setTitle": true,
        "print": false,
        "requestUserAttention": false,
        "setAlwaysOnTop": false,
        "setClosable": false,
        "setContentProtected": false,
        "setCursorGrab": false,
        "setCursorIcon": false,
        "setCursorPosition": false,
        "setCursorVisible": false,
        "setDecorations": false,
        "setFocus": false,
        "setFullscreen": false,
        "setIcon": false,
        "setIgnoreCursorEvents": false,
        "setMaxSize": false,
        "setMaximizable": false,
        "setMinSize": false,
        "setMinimizable": false,
        "setPosition": false,
        "setResizable": false,
        "setSize": false,
        "setSkipTaskbar": false
      }
    },
    "bundle": {
      "active": true,
      "category": "Photography",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.andots.siv",
      "shortDescription": "siv - Simple Image Viewer",
      "longDescription": "siv is a Simple Image Viewer",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; connect-src 'self' asset: https://asset.localhost;"
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": ["https://github.com/andots/siv/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNFRjM3QzhERjU0NTNFMkQKUldRdFBrWDFqWHp6UHBFSWZSajc0UzB5WUtUbDZQekdtRkpBUktjaENPSmU5MGhtVE5BZEFzbCsK"
    }
  }
}
