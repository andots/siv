{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "siv",
  "app": {
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"]
        }
      },
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost 'self' asset: https://asset.localhost;"
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "height": 1000,
        "minHeight": 300,
        "minWidth": 300,
        "resizable": true,
        "title": "siv",
        "width": 800
      }
    ]
  },
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:4321",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "Photography",
    "copyright": "",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "longDescription": "siv is a Simple Image Viewer",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "siv - Simple Image Viewer",
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "identifier": "com.andots.siv",
  "plugins": {
    "cli": {
      "args": [
        {
          "index": 1,
          "name": "file",
          "takesValue": true
        }
      ],
      "description": "Load file"
    },
    "updater": {
      "endpoints": ["https://github.com/andots/siv/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNFRjM3QzhERjU0NTNFMkQKUldRdFBrWDFqWHp6UHBFSWZSajc0UzB5WUtUbDZQekdtRkpBUktjaENPSmU5MGhtVE5BZEFzbCsK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
