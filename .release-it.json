{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "plugins": {
    "@j-ulrich/release-it-regex-bumper": {
      "in": "package.json",
      "out": {
        "file": "src-tauri/Cargo.toml",
        "search": "version = \"([0-9.]+)\"",
        "replace": "version = \"{{version}}\""
      }
    },
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md"
    }
  },
  "npm": {
    "publish": false
  }
}
